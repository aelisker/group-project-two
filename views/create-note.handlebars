<section>
  <form class="new-post-form">
    <h2>Create New Note</h2>
    <div class="form-group">
      <label for="post-title">Title</label>
      <input type="text" class="form-control"  id="note-title" name="note-title" placeholder="Optional">
    </div>
    <div class="form-group">
      <label for="post-content">Note Body</label>
      <textarea class="form-control" name="note-content" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Create</button>
  </form>
</section>

<script src="/javascript/add-note.js"></script>
